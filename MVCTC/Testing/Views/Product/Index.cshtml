@model IEnumerable<Product>

<h2>Products</h2>
<div style="display: block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock</th>
    </tr>
    <div class="form-group">
        <label for="">Sort By</label>
        <select class="form-control" name="Sort By" value="">
            <option value="Product ID">ProductID</option>
            <option value="Product Name">Name</option>
            <option value="Product Price">Price</option>
            <option value="On Sale">Sale Item</option>

        </select>

        <input type="submit" value="SortProducts" class="btn btn-primary" />
    </div>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.Name</a></td>
            <td>@product.Price</td>
            <td>@product.CategoryID </td>
            <td>@product.OnSale</td>
            <td>@product.StockLevel</td>
        </tr>
    }
</table>